<h3><%= @photo.title %></h3>
<p><%= @photo.body %></p>

<%= link_to "Voltar", photos_url %>
<%= link_to "Editar", edit_photo_url(@photo) %>
<%= link_to "Deletar", photo_path(@photo), method: :delete, data: {confirm: "Certeza?"} %>

<div style="max-width: 500px">
  <%= image_tag(url_for(@photo.picture), {class: "img-fluid"}) %>
</div>
